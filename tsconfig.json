{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true ,
      "moduleResolution": "node",
      "types": ["jest"] // Include Jest types here
    },
    
    "include":["src/**/*.ts", "tests/**/*.ts"] ,
    "exclude": ["node_modules"]
}